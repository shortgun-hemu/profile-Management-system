{{>header}}
<div class="container">
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <div class="card-header text-center">
                <label>
                    <h3>
                        <b>
                            <strong>
                                Register
                            </strong>
                        </b>
                    </h3>
                </label>
            </div>
            <form method="POST" action="/register" enctype="multipart/form-data">
                <input type="text" name="name" placeholder="Eneter Your Name" class="form-control mt-3" required/>
                <input type="text" name="userName" placeholder="Eneter Your Username" class="form-control mt-3" required/>
                <input type="email" name="email" placeholder="Eneter Your Email" class="form-control mt-3" required/>
                <input type="file" name="img" class="form-control mt-3" required/>
                <input type="password" name="password" placeholder="Your Password" class="form-control mt-3" required />
                <input type="submit" class="form-control btn btn-success mt-3" value="Register" />
            </form>
        </div>
        <div class="col-md-4"></div>
    </div>
</div>
{{>footer}}