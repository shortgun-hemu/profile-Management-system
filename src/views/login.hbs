{{>header}}
<div class="container">
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <div class="card-header text-center mt-5">
                <label>
                    <h3>
                        <b>
                            <strong>
                                Login
                            </strong>
                        </b>
                    </h3>
                </label>
            </div>
            <form method="POST" action="/login">
                <input type="text" placeholder="Enter Your Username" class="form-control mt-3" name="username" required/>
                <input type="password" placeholder="Enter Your Password" class="form-control mt-3" name="password" required/>
                <input type="submit"  value="Login" class="form-control mt-3 btn btn-success" />
            </form>
            <div class="card-footer text-center">
                <small>Copyright</small>
            </div>
        </div>
        <div class="col-md-4"></div>
    </div>
</div>
{{>footer}}